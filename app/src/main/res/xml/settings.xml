<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:icon="@drawable/ic_access_time_black_24dp"
        android:key="time_settings"
        android:summary="@string/time_settings_desc"
        android:title="@string/time_settings" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_view_week_black_24dp"
        android:key="sevendays"
        android:summary="@string/enable_seven_days_setting"
        android:title="@string/seven_days_of_the_week" />

    <EditTextPreference
        android:icon="@drawable/ic_open_in_browser_white_24dp"
        android:key="schoolwebsite"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/change_school_website_setting_summary"
        android:title="@string/change_school_website_setting" />

    <ListPreference
        android:defaultValue="switch"
        android:entries="@array/theme_array"
        android:entryValues="@array/theme_array_values"
        android:icon="@drawable/ic_palette_black_24dp"
        android:key="theme"
        android:title="@string/choose_theme_setting" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:icon="@drawable/ic_do_not_disturb_on_black_24dp"
        android:key="automatic_do_not_disturb"
        android:summary="@string/do_not_disturb_settings_desc"
        android:title="@string/do_not_disturb_setting" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="do_not_disturb_turn_off"
        android:title="@string/do_not_disturb_turn_off" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:icon="@drawable/ic_slideshow_black_24dp"
        android:key="timetableNotif"
        android:title="@string/notification_visibility_setting" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="alwaysNotification"
        android:summary="@string/notification_show_permanent_setting_desc"
        android:title="@string/notification_show_permanent_setting" />
    <Preference
        android:key="alarm"
        android:summary="@string/notification_alarm_setting_desc"
        android:title="@string/notification_alarm_setting" />

    <Preference
        android:key="cyanea"
        android:title="Theming"
        app:isPreferenceVisible="false" />
</PreferenceScreen>